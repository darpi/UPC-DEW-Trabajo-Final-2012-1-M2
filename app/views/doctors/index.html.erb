				<table>
				  <tr>
					<th>Administrador?</th>
					<th>Nombre_Apellido </th>
					<th>Mail</th>
					<th>Telefono</th>
					<th></th>
					<th></th>
					<th></th>
				  </tr>

				<% @doctors.each do |doctor| %>
				  <tr>
					<td><%= doctor.administrator %></td>
					<td><%= doctor.name_surname %></td>
					<td><%= doctor.mail %></td>
					<td><%= doctor.phone %></td>
					<td><%= link_to 'Ver Detalle', doctor %></td>
					<td><%= link_to 'Editar', edit_doctor_path(doctor) %></td>
					<td><%= link_to 'Eliminar', doctor, confirm: 'Are you sure?', method: :delete %></td>
					<!-- <td><%= link_to 'Crear Usuario', new_user_path(doctor) %></td> --> 
					
				  </tr>
				<% end %>

				</table>

				<br />

				<%= link_to 'Regresar a Home', homes_path %>
				
			</div>
	
			<!--script type="text/javascript">
			var TabbedPanels1 = new Spry.Widget.TabbedPanels("TabbedPanels1");
			
