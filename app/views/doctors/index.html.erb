<h1>Listing doctors</h1>

<table>
  <tr>
    <th>Administrator</th>
    <th>Name surname</th>
    <th>Mail</th>
    <th>Phone</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @doctors.each do |doctor| %>
  <tr>
    <td><%= doctor.administrator %></td>
    <td><%= doctor.name_surname %></td>
    <td><%= doctor.mail %></td>
    <td><%= doctor.phone %></td>
    <td><%= doctor.user %></td>
    <td><%= link_to 'Show', doctor %></td>
    <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
    <td><%= link_to 'Destroy', doctor, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

