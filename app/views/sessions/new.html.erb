<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <link rel="stylesheet" href="../assets/ie.css" type="text/css">
        <link rel="stylesheet" href="../assets/print.css" type="text/css">
        <link rel="stylesheet" href="../assets/screen.css" type="text/css">
        <link rel="stylesheet" href="../assets/styles.css" type="text/css">
        <script language="JavaScript" src="../assets/scripts.js"></script>
        <title>Veterinaria Patita</title>
    </head>
    <body>
        <div class="container-page">

            <!-- Inicio Cabecera del Sistema -->
            <div id="encabezado" class="span-24 last">				
                <div id="logo" class="span-24 last">
                    <img src="../assets/logo.png" />
                </div>
                <!--div id="aplicacion" class="span-7 last">
                    Nombre de la Aplicaci&oacute;n
                </div-->
                				
            </div>
            <!-- Fin Cabecera del Sistema -->

			<!-- Inicio Menu del Sistema -->
				<div id="barra-amarilla" class="span-24 last">
					<!-- Login Non Modal -->

					<div class="container">
					  <div class="row center">
						<h2 style="margin-bottom: 20px;">Ingresar al Sistema</h2>
					  </div>
					  <div class="row">
						<div class="span4 offset4 well">
						  <%= form_tag (sessions_path), class: "form" do %>
							<fieldset>
							  <legend></legend>
							  <div class="control-group">
								<%= label_tag :Usuario, nil ,class: "control-label" %>
								<div class="controls"><%= text_field_tag :email, params[:email], class: "input-xlarge" %></div>
							  </div>
							  <div class="control-group">
								<%= label_tag :password, nil, class: "control-label"  %>
								<div class="controls"><%= password_field_tag (:password), nil ,class: "input-xlarge" %></div>
							  </div>
							  
							  <!--  <div class="control-group"> -->
							  <!--   <%= label_tag :remember_me, nil, class: "control-label"  %> -->
							  <!--   <%= check_box_tag :remember_me, 1, params[:remember_me] %> -->
							  <!--  </div> -->     
							  
							  <!--  <div class="actions"><%= link_to  t("user.log_in", default: "Entrar"), class: "btn btn-large btn-primary"%></div> -->
								<div class="actions"><%= submit_tag t("user.log_in", default: "Entrar"), class: "btn btn-large btn-primary" %></div>
							</fieldset>
						  <% end %>
							<!-- <%= link_to t("user.forgotten_password", default: "Forgotten password?"), new_password_reset_path %> - <%= link_to t("user.sign_up", default: "Sign Up"), new_user_path %> -->
						</div>
					  </div>
					</div>

					<!-- End of Login Non Modal -->
				</div>
            <!-- Fin Menu del Sistema -->
			
            <!-- Inicio Cuerpo de la Pagina -->
            <div class="span-24 last">
				
			</div>
            <!-- Fin Cuerpo de la Pagina -->

            <!-- Inicio Pie del Sistema --> 
           
            <!-- Fin Pie del Sistema --> 
        </div>
    </body>
</html>



